# MTK project .rc configure

import init.mt6765.usb.rc

on init
    mkdir /mnt/media_rw/usbotg 0700 media_rw media_rw
    mkdir /storage/usbotg 0700 root root

on post-fs-data

#Camera
    chmod 0660 /dev/MAINAF
    chown system camera /dev/MAINAF

    chmod 0660 /dev/MAINAF2
    chown system camera /dev/MAINAF2

    chmod 0660 /dev/SUBAF
    chown system camera /dev/SUBAF

    chmod 0660 /dev/GAF001AF
    chown system camera /dev/GAF001AF

    chmod 0660 /dev/DW9714AF
    chown system camera /dev/DW9714AF

    chmod 0660 /dev/LC898212AF
    chown system camera /dev/LC898212AF

    chmod 0660 /dev/BU64745GWZAF
    chown system camera /dev/BU64745GWZAF

#SMB
    chown system system /proc/smb/ScreenComm
    chmod 0660 /proc/smb/ScreenComm

    chmod 0660 /dev/spm
    chown system system /dev/spm

#EDGE_CONTROL add by yaosong
    chown root system sys/devices/platform/11007000.i2c0/i2c-0/0-0038/fts_edge_control
    chmod 0666 sys/devices/platform/11007000.i2c0/i2c-0/0-0038/fts_edge_control
    chown root system sys/devices/platform/11007000.i2c0/i2c-0/0-0014/gtp_edge_control
    chmod 0666 sys/devices/platform/11007000.i2c0/i2c-0/0-0014/gtp_edge_control

#OTP_DUMP
    mkdir /data/misc/camera 0777 system camera
    mkdir /data/vendor/charge_logger 0777 system system

on init
    # Refer to http://source.android.com/devices/tech/storage/index.html
    # It said, "Starting in Android 4.4, multiple external storage devices are surfaced to developers through
    #           Context.getExternalFilesDirs(), Context.getExternalCacheDirs(), and Context.getObbDirs().
    #           External storage devices surfaced through these APIs must be a semi-permanent part of the device (such as an SD card slot in a battery compartment).
    #           Developers expect data stored in these locations to be available over long periods of time."
    # Therefore, if the target doesn't support sd hot-plugging (Ex: the SD card slot in a battery compartment), we need to export SECONDARY_STORAGE in 'boot' section
    #
    # export SECONDARY_STORAGE /storage/sdcard1


service fuse_usbotg /system/bin/sdcard -u 1023 -g 1023 -w 1023 -d /mnt/media_rw/usbotg /storage/usbotg
    class late_start
    disabled

service spm_script /vendor/bin/spm_loader
    user system
    group system
    class core
    oneshot

#add charge_logger
service charge_logger /vendor/bin/charge_logger
    class main
    user root
    group system
    oneshot

# start remosaic_daemon
on property:sys.boot_completed=1
    chmod 0666 /data/vendor/charge_logger/charge_logger_a.csv
    chmod 0666 /data/vendor/charge_logger/charge_logger_b.csv
    start remosaic_daemon
    start mmc_id_check

#mmc_id_check
service mmc_id_check /vendor/bin/read_emmc
    class main
    user root
    group system
    oneshot

on property:persist.config.mmc=hy
    start mmc_ffu_hynix
    oneshot
    user system
    group system

on property:persist.config.mmc=sd
    start mmc_ffu_sandisk
    oneshot
    user system
    group system

service remosaic_daemon /vendor/bin/remosaic_daemon
    class core
    user system
    group system
    oneshot
    disabled

#hynix emmc fw update,manif-id 0x90
service mmc_ffu_hynix /vendor/bin/mmc_ffu do /vendor/bin/emmc_hynix.bin /dev/block/mmcblk0 90 36303030 34303030
    class main
    user root
    group system
    oneshot

#sandisk emmc fw update,manif-id 0x45
service mmc_ffu_sandisk /vendor/bin/mmc_ffu do /vendor/bin/emmc_sandisk.bin /dev/block/mmcblk0 45 3931363034313430 3731613033323635
    class main
    user root
    group system
    oneshot

# add PcbaConfigSet
service PcbaConfigSet /system/vendor/bin/PcbaConfigSet
    class core
    oneshot

service maxcurrent_nocall /system/vendor/bin/factory_bin m 0
    user root
    oneshot
    disabled

on property:sys.m.incall=0
    start maxcurrent_nocall

service maxcurrent_incall /system/vendor/bin/factory_bin m 1
    user root
    oneshot
    disabled

on property:sys.m.incall=1
    start maxcurrent_incall
